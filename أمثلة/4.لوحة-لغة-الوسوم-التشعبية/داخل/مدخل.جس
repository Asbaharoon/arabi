استيراد دائرة، { لوحتي، سياق } من "./دائرة.جس"؛
استيراد { صحيح_عشو، عشو } من "./مساعدات.جس"؛

عرف دوائر = []؛

اعد()؛

دالة اعد(){
	لكل(عرف أ من (انشئ مصفوفة(10))) دوائر.ادفع(احضر_دائرة_عشو())؛
}

دالة احضر_دائرة_عشو() {
	عرف ك = رياضيات.عشوائي()*10؛
	// نصف القطر يتناسب طرديا مع جزر الكتلة بفرض ثبات الكثافة المساحية
	عرف نق = رياضيات.جزر(ك)*50؛
	عرف س = عشو(نق، لوحتي.عرض_العميل-نق)؛
	عرف ص = عشو(نق، لوحتي.طول_العميل-نق)؛
	عرف رسم = { شكل_الخط: "black" }؛
	عرف د = انشئ دائرة({ س، ص، نق، ك، رسم، جوفاء: حق })؛
	ارجع د؛
}


onresize = () => {
	لوحتي.طول = لوحتي.طول_العميل؛
	لوحتي.عرض = لوحتي.عرض_العميل؛
	لكل(عرف د من دوائر) د.ارسم()؛
}

onresize()؛
